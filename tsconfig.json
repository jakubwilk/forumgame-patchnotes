{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@app/data": ["./src/data/index.ts"],
      "@app/greetings": ["./src/greetings/index.ts"],
      "@app/header": ["./src/header/index.ts"],
      "@app/home": ["./src/home/index.ts"],
      "@app/main": ["./src/app/index.ts"],
      "@app/menu": ["./src/menu/index.ts"],
      "@app/updates/common": ["./src/updates/common/index.ts"],
      "@app/updates/magic": ["./src/updates/magic/index.ts"],
      "@app/updates/tutorials": ["./src/updates/tutorials/index.ts"]
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": ["src"]
}
